<div class="navbar navbar-expand-sm navbar-light navbar-lewagon  <%= 'fixed-top' if current_page?(root_path)%>" style="<%= 'background: transparent;' if current_page?(root_path)%>">
  <%= link_to root_path, class: "navbar-brand" do %>
    <%= image_tag("equip'R.png") %>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <% if user_signed_in? %>
        <li class="nav-item active">
          <%= link_to "Home", root_path, class: "nav-link", style: "color: #{ 'white' if current_page?(root_path)};"%>
        </li>
        <li class="nav-item">
          <%= link_to "My equipments", own_equipment_path , class: "nav-link" , style: "color: #{ 'white' if current_page?(root_path)};"%>
        </li>
        <li class="nav-item">
          <%= link_to "My bookings", own_bookings_path, class: "nav-link" , style: "color: #{ 'white' if current_page?(root_path)};"%>
        </li>
        <li class="nav-item dropdown">
          <% if current_user.photo.attached?%>
            <%= cl_image_tag current_user.photo.key, class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <% else %>
            <%= image_tag "default_pic.png", class: "avatar dropdown-toggle", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false%>
          <%end%>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
              <a class="dropdown-item" href="/equipment/new">Add new equipment</a>
          </div>
        </li>
      <% else %>
        <li class="nav-item">
          <%= link_to "Login", new_user_session_path, class: "nav-link", style: "color: #{ 'white' if current_page?(root_path)};"%>
        </li>
      <% end %>
    </ul>
  </div>
</div>
