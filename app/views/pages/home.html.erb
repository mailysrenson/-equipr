    <h1 class="white">Equip'R</h1>
    <form novalidate="novalidate" class="simple_form search" action="/equipment/search" accept-charset="UTF-8" method="get">
      <input name="utf8" type="hidden" value="&#x2713;" />
      <div class="search-form-control form-group">
        <input class="form-control string required"  type="text" name="search" id="search-blue" placeholder="What are you looking for?"/>
