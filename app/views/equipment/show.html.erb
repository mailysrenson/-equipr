<div class="container">
<h2 class="my-3 text-center"><%= @equipment.name %></h2>


<!-- Carousel -->
<div class="col-6 offset-3 d-flex justify-content-center">
  <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
      <div class="carousel-inner">

    <% @equipment.photos.each_with_index do |photo, index|%>
        <% if index == 0 %>
        <div class="carousel-item active" data-slide-to="<%= index %>">
            <%= cl_image_tag photo.key, class: "d-block w-100 rounded"%>
        </div>
        <% else %>
        <div class="carousel-item">
              <%= cl_image_tag photo.key, class: "d-block w-100 rounded"%>
        </div>
        <% end %> 

    <% end %>
          </div>
    <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>
</div>

<p class="mt-3 text-center">Description: <%= @equipment.description %></p>
<p class="text-center">Price: <%= @equipment.price %>â‚¬</p>
<p class="text-center">Rented by: <%= @equipment.user[:first_name] %></p>
</div>

