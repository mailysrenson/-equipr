<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1 class="my-3">My equipment</h1>
    <%= link_to "Add new equipment", new_equipment_path, class: "btn btn-primary my-3"%>
  </div>



    <% @equipment.each do |equipment| %>
      <div class="row bg-white rounded my-2 py-3 card-shadow">
        <div class="col-4">
          <%= cl_image_tag equipment.photos.first.key, crop: :fill, class: "mr-3 w-100" %>
        </div>
        <div class="col-8">
          <h3 class="d-block"><%= link_to "#{equipment.name}", equipment_path(equipment) %></h3>
          <p class="d-block"><%= "Price: #{equipment.price}â‚¬"%></p>
          <p class="d-block">Bookings: <%= equipment.bookings.length%></p>
        </div>
      </div>
    <% end %>
</div>
